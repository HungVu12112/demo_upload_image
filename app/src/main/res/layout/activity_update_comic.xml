<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".UpdateComic">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Comic "
        android:textSize="26dp"
        android:textStyle="bold"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/edNamenews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:hint="Tên truyện " />

    <EditText
        android:id="@+id/edNameTGnews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên tắc giả" />

    <EditText
        android:id="@+id/edDesnews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chi tiết " />

    <EditText
        android:id="@+id/edYearXBnews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Năm xuất bản " />

    <Button
        android:id="@+id/btn_AnhBianews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn ảnh bìa chuyện" />

    <ImageView
        android:id="@+id/imgAnhBianews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btn_AnhNdnews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn ảnh nội dung truyện" />

    <ImageView
        android:id="@+id/imgAnhNdnews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnUpdateTruyennews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa truyện" />
    </LinearLayout>
</ScrollView>