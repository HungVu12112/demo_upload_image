<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/load"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Lab Retrofit CRUD"
                android:textSize="26dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/idrecyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:hint="Tên truyện " />

            <EditText
                android:id="@+id/edNameTG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên tắc giả" />

            <EditText
                android:id="@+id/edDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chi tiết " />

            <EditText
                android:id="@+id/edYearXB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Năm xuất bản " />

            <Button
                android:id="@+id/btn_AnhBia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn ảnh bìa chuyện" />

            <ImageView
                android:id="@+id/imgAnhBia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/btn_AnhNd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn ảnh nội dung truyện" />

            <ImageView
                android:id="@+id/imgAnhNd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/btnThemTruyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm truyện" />
        </LinearLayout>
    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>